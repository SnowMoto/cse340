<!-- Heading Content -->
<% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
    } %>

<!-- displays error messages -->
<%- messages() %>

<!-- display errors -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<% let account = locals.accountData %>
<% if (locals.loggedin) { %>
  <h2 class="account">Welcome <%= locals.accountData.account_firstname %></h2>
  <div class="management-links">
    <a href="/account/edit/<%= locals.accountData.account_id %>">Manage Your Account Information</a>
  </div>
  <h2 class="account">Message Center</h2>
  <p class="alert">Unread Messages = <%= locals.unreadMessages %></p>
  <div class="management-links">
    <a href="/inbox/">Inbox</a>
  </div>
  <% if (account.account_type == "Employee" || account.account_type == "Admin") { %>
    <h3 class="login-name">Inventory Management</h3>
    <div class="management-links">
      <a href="/inv/">Manage inventory</a>
    </div>
  <% } %>
<% } %>
