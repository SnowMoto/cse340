<!--Heading content-->
<% if (title) { %>
    <h1><%= title %></h1>
    <%} else {
        res.redirect('/')
    } %>
 <!--Flash Message-->
    <%- messages()  %>
  
  <!-- display errors -->
  <% if (errors) { %>
        <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
  </ul>
  <% } %>

<div class="management-links">
    <a href="/inv/add-classification.ejs">Add New Classification</a>
    <a href="/inv/add-inventory.ejs">Add New Inventory</a>
</div>

